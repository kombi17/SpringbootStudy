<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ishift.bootStudy.mapper.UserMapper">
	
    <!-- 로그인 -->
    <select id="getUserAccount" resultType="com.ishift.bootStudy.model.vo.User">
        SELECT * FROM user
        WHERE USER_ID= #{userId}
    </select>

	<!-- 회원 가입 -->
    <insert id="saveUser" parameterType="com.ishift.bootStudy.model.vo.User">
        INSERT INTO user (USER_ID, USER_PW, USER_NAME, USER_AUTH, APPEND_DATE, UPDATE_DATE)
        VALUES (#{userId}, #{userPw}, #{userName}, 'USER', SYSDATE(), SYSDATE());
    </insert>
    
   	<!-- 회원 목록 조회 -->
	<select id="selectAllUser" resultType="com.ishift.bootStudy.model.vo.User">
		SELECT * FROM user
	</select>
	
	<!-- 로그인 한 회원 정보 조회 --> 
	<select id="selectLoginUser" resultType="com.ishift.bootStudy.model.vo.User">
		SELECT * FROM user
		WHERE USER_ID= #{userId}
	</select>
</mapper>